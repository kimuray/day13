<%= form_for(blog) do |f| %>
  <% if blog.confirming.blank? %>
    <% if blog.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(blog.errors.count, 'error') %> prohibited this blog from being saved:</h2>

        <ul>
        <% blog.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :content %>
      <%= f.text_area :content %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% else %>
    <h3>以下の内容で、送信する。</h3>
    <%= f.hidden_field :title %>
    <%= f.hidden_field :content %>

    <p>タイトル:<%= blog.title %></p>
    <p>本文:<%= blog.content %></p>
    <%= f.submit '登録する' %>
    <%= f.submit '戻る', name: :back %>
  <% end %>
  <%= f.hidden_field :confirming %>
<% end %>


